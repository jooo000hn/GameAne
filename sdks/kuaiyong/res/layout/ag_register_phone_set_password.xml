<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
   android:background="@color/ag_color_bg">
    
    <include layout="@layout/ag_title"
        android:id="@+id/ag_layout_set_password"/>
    
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ag_layout_set_password" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    
    
    <LinearLayout
        style="@style/ag_linearlayout_textview"
        android:id="@+id/ag_tv_set_password"
       
         >
        
        
    <TextView 
        style="@style/ag_textView_linearLayout"
        android:text="@string/ag_register_set_login_password"/>
    
    </LinearLayout>
    
    
    <LinearLayout 
        style="@style/ag_linearLayout_1"
        android:id="@+id/ag_ll_set_password"
        android:layout_below="@id/ag_tv_set_password"
        >
        
        <ImageView 
            style="@style/ag_imageView_user_password_phone"
            android:src="@drawable/ag_pwd"/>
        
        <EditText 
            style="@style/ag_EditText_style_input"
            android:id="@+id/ag_et_input_login_password"
            android:hint="@string/ag_register_user_password"
            android:inputType="textPassword"
            android:textColorHint="@color/ag_color_gray"
            />
        
    </LinearLayout>
    
    <Button 
        style="@style/ag_button_blue_style"
        android:id="@+id/ag_btn_phone_sure_register"
        android:layout_below="@id/ag_ll_set_password"
        android:layout_marginTop="@dimen/ag_25dp"
        android:text="@string/ag_register_sure_and_register"
        />
    
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ag_btn_phone_sure_register"
        android:layout_marginTop="@dimen/ag_25dp"
        android:layout_marginLeft="@dimen/ag_21dp"
        android:layout_marginRight="@dimen/ag_21dp"
        android:textSize="@dimen/ag_14sp"
        android:textColor="@color/ag_color_black_textview"
        android:text="@string/ag_register_remind"/>
    
</RelativeLayout>
</ScrollView>
</RelativeLayout>
