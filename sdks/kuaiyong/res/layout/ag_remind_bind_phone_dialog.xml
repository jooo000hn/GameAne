     <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ag_dialog_card_background"
        android:layout_marginLeft="@dimen/ag_10dp"
        android:layout_marginRight="@dimen/ag_10dp"
        android:layout_marginTop="@dimen/ag_20dp"
        android:paddingBottom="@dimen/ag_15dp">
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/ag_5dp" 
            android:id="@+id/ag_ll_title">
             
            <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ag_set_bind_phone"
            android:textSize="@dimen/ag_18sp"
            android:textColor="@color/ag_color_black_textview"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/ag_10dp"
            android:layout_marginBottom="@dimen/ag_10dp"
            />
            
        </LinearLayout>
      
        
        <View 
            android:id="@+id/ag_view_divide"
            android:layout_below="@id/ag_ll_title"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginTop="@dimen/ag_5dp"
            android:background="@color/ag_color_gray"/>
        
        
        
        
        <TextView 
            android:layout_below="@id/ag_view_divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ag_tv_sure"
            android:text="@string/ag_find_password_sure"
            android:textSize="@dimen/ag_18sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/ag_color_blue"
            android:layout_marginTop="@dimen/ag_20dp"
          />
        
    </RelativeLayout>
    
    
    
    
    

</LinearLayout>
