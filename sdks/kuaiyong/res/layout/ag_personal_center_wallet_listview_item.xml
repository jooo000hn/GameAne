<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ag_10dp"
        android:layout_marginRight="@dimen/ag_10dp"
        android:background="@android:color/transparent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ag_corner_red"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ag_10dp"
                android:layout_marginLeft="@dimen/ag_3dp"
                android:layout_marginRight="@dimen/ag_3dp"
                android:layout_marginTop="@dimen/ag_3dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2" >

                    <TextView
                        android:id="@+id/tv_red_packet_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/pc_wallet5"
                        android:layout_marginLeft="@dimen/ag_508dp"
                        android:layout_marginTop="@dimen/ag_30dp"
                        android:textColor="@color/color_white"
                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/ag_3dp"
                        android:layout_marginTop="@dimen/ag_3dp"
                        android:text="@string/pc_wallet5"
                        android:textColor="@color/color_white" />
                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_marginTop="@dimen/ag_10dp"
                    android:layout_marginBottom="@dimen/ag_10dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_bg" />

                <TextView
                    android:id="@+id/tv_red_packet_descripte"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:padding="@dimen/ag_5dp"
                    android:textSize="@dimen/ag_16sp"
                    android:text="100元通用红包（CHID）"
                    android:textColor="@color/color_white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ag_5dp"
            android:background="@drawable/ag_corner_white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ag_10dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pc_wallet6" 
                        android:textSize="@dimen/ag_14sp"/>

                    <TextView
                        android:id="@+id/tv_red_packet_validity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/ag_14sp"
                        android:text="2015-3-1至2015-9-20" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" 
                    android:layout_marginTop="@dimen/ag_5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/ag_14sp"
                        android:text="@string/pc_wallet7" />

                    <TextView
                        android:id="@+id/tv_red_packet_scope"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/ag_14sp"
                        android:text="仅适用于刀塔传奇、少年三国志、大闹天宫、大闹天宫、大闹天宫、" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ag_10dp" >

                <TextView
                    android:id="@+id/tv_red_packet_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:text="ID:22343546565653"
                    android:textSize="@dimen/ag_14sp"
                    android:textColor="@color/color_red" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>