<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/ag_color_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal" >

    <include
        android:id="@+id/ag_card_title"
        layout="@layout/ag_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ag_card_title"
        android:paddingBottom="@dimen/ag_8dp"
        android:paddingTop="@dimen/ag_10dp" >

        <ListView
            android:id="@+id/ag_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ag_color_bg"
            android:divider="@color/ag_color_bg"
            android:dividerHeight="@dimen/ag_10dp"
            android:scrollbars="none" >
        </ListView>

        <ImageView
            android:id="@+id/ag_iv_red_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ag_red_envelope_empty"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>