<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/title_goback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/ag_10dp"
        android:src="@drawable/ag_title_goback" />

    <ImageView
        android:id="@+id/title_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/ag_10dp"
        android:src="@drawable/ag_title_close" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/ag_10dp"
        android:gravity="center_horizontal"
        android:text="@string/title_tv"
        android:textColor="@color/color_black_textview"
        android:textSize="@dimen/ag_18sp" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/title_goback"
        android:background="@color/color_gray_white" />

    <TextView
        android:id="@+id/title_tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/ag_10dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:text="@string/title_tv1"
        android:textSize="@dimen/ag_18sp"
        android:visibility="invisible" />

    <!-- 用来显示logo图片 ,默认隐藏 -->

    <ImageView
        android:id="@+id/iv_show_title_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:src="@drawable/ag_title_logo"
        android:visibility="invisible" />

</RelativeLayout>