<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ag_alert_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/ag_30dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ag_10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    style="@style/ag_tv_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/ag_pay_tv9" />
            </LinearLayout>

            <TextView
                style="@style/ag_tv_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/ag_pay_tv10" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/ag_color_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ag_tv_pay_give_up_wrong"
                style="@style/ag_tv_large"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ag_10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/ag_pay_tv11" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/ag_color_gray" />

            <TextView
                android:id="@+id/ag_tv_pay_give_up"
                style="@style/ag_tv_blue_large"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ag_10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/ag_pay_tv12" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>