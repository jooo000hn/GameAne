<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/ag_220dp"
        android:background="@drawable/ag_dialog_card_background"
        android:layout_marginLeft="@dimen/ag_10dp"
        android:layout_marginRight="@dimen/ag_10dp"
        android:layout_marginTop="@dimen/ag_20dp">
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/ag_5dp" 
            android:id="@+id/ag_ll_title">
             
            <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ag_account_check"
            android:textSize="@dimen/ag_18sp"
            android:layout_marginTop="@dimen/ag_10dp"
            android:textColor="@color/ag_color_blue"
            android:layout_gravity="center"
            />
            
        </LinearLayout>
      
        <View 
            android:id="@+id/ag_line"
            android:layout_width="match_parent"
            android:layout_below="@id/ag_ll_title"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/ag_15dp"
            android:background="@color/ag_color_gray_white"/>
        
        <TextView 
            android:id="@+id/ag_tv_hint"
            android:layout_below="@id/ag_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ag_account_check_desc"
            android:textColor="@color/ag_color_inner_remind"
            android:layout_marginLeft="@dimen/ag_10dp"
            android:layout_marginRight="@dimen/ag_10dp"
            android:layout_marginTop="@dimen/ag_10dp"/>
        
      <LinearLayout
        style="@style/ag_linearLayout_1"
        android:id="@+id/ag_ll_et_pwd"
        android:layout_below="@id/ag_tv_hint"
        android:layout_height="@dimen/ag_40dp"
        android:layout_marginTop="@dimen/ag_10dp"
        android:layout_marginLeft="@dimen/ag_10dp"
        android:layout_marginRight="@dimen/ag_10dp"
       >
        <EditText 
            style="@style/ag_EditText_style_input"
            android:id="@+id/ag_et_pwd"
            android:paddingLeft="@dimen/ag_10dp"
            android:hint="@string/ag_account_check_input"
            android:inputType="textPassword"
            android:textColor="@color/ag_color_black_textview"
            android:textColorHint="@color/ag_color_gray"
            android:textCursorDrawable="@null"
            />
        
        <ImageView 
            style="@style/ag_close_image"
            android:id="@+id/ag_close_account"
            />
        
    </LinearLayout>
        
      <Button 
          android:id="@+id/ag_btn_sure"
		  android:background="@drawable/ag_btn_blue"          
          android:layout_below="@id/ag_ll_et_pwd"
          android:layout_width="match_parent"
          android:layout_height="@dimen/ag_40dp"
		  android:layout_marginLeft="@dimen/ag_10dp"
		  android:layout_marginRight="@dimen/ag_10dp"
		  android:layout_marginTop="@dimen/ag_15dp"
          android:text="@string/ag_account_check_sure"
          android:textColor="@color/ag_color_white"/>
      
    </RelativeLayout>
    
    
</RelativeLayout>
