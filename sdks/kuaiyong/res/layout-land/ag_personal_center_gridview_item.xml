<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center" >

        <ImageView
            android:id="@+id/iv_gridview_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ag_500dp"
            android:src="@drawable/ag_message" />

        <ImageView
            android:id="@+id/iv_gridview_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/iv_gridview_img"
            android:layout_alignTop="@id/iv_gridview_img"
            android:src="@drawable/ag_red_ball" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_gridview_content"
        style="@style/ag_tv_little"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_marginBottom="@dimen/ag_16dp"
        android:layout_marginLeft="@dimen/ag_15dp"
        android:layout_marginRight="@dimen/ag_15dp"
        android:layout_marginTop="@dimen/ag_514dp"
        android:text="@string/pc_msg2"
        android:textSize="@dimen/ag_16sp" />

</LinearLayout>