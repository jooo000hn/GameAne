<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="@dimen/layout_width"
        android:layout_height="@dimen/layout_hight"
        android:background="@color/background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_width1"
            android:background="@drawable/head">

            <ImageView
                android:id="@+id/reset_back"
                android:layout_width="@dimen/layout_width1"
                android:layout_height="@dimen/layout_hight1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/layout_margin"
                android:src="@drawable/back" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/found"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/textBtn"/>
            <View
                android:layout_width="@dimen/layout_width1"
                android:layout_height="@dimen/layout_hight1"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/layout_margin"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_layout_hight"
                android:layout_marginBottom="@dimen/layout_marginBottom"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:background="@drawable/edit_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/reset_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:hint="@string/reset_edit"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/textForget"
                    android:gravity="center" />
            </LinearLayout>

            <Button
                android:id="@+id/reset"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_layout_hight"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_marginTop="@dimen/layout_margin"
                android:background="@drawable/btn_bg1"
                android:text="@string/reset"
                android:gravity="center"
                android:textColor="@color/button"
                android:textSize="@dimen/textBtn" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>