<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/layout_width"
        android:layout_height="@dimen/layout_hight"
        android:background="@drawable/bg_agreement"
        android:layout_gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/agreement_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_width1"
                android:layout_marginTop="@dimen/layout_margin_right"
                android:background="#0000"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_title" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_hight_view"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:background="@color/green" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/agreement_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_marginTop"
                    android:padding="@dimen/layout_marginBottom"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textForget"
                    android:background="#0000"></TextView>

            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_layout_hight1"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_marginTop="@dimen/layout_hight1"
            android:orientation="vertical">
            <Button
                android:id="@+id/agreement_btn"
                android:layout_width="@dimen/dialog_view_hight"
                android:layout_height="@dimen/layout_width1"
                android:layout_marginBottom="@dimen/layout_margin"
                android:background="@drawable/btn_bg3"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/button"
                android:textSize="@dimen/textSize_title" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>