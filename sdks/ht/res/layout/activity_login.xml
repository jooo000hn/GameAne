<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/layout_width"
        android:layout_height="@dimen/layout_hight"
        android:background="@color/background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_width1"
            android:background="@drawable/head">

            <ImageView
                android:id="@+id/login_back"
                android:layout_width="@dimen/layout_width1"
                android:layout_height="@dimen/layout_hight1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/layout_margin"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/login"
                android:textColor="@color/black"
                android:textSize="@dimen/textBtn" />

            <View
                android:layout_width="@dimen/layout_width1"
                android:layout_height="@dimen/layout_hight1"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/layout_margin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_layout_hight"
                android:layout_marginBottom="@dimen/layout_marginBottom"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:background="@drawable/edit_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/layout_margin"
                    android:layout_height="@dimen/layout_margin"
                    android:layout_marginLeft="@dimen/layout_marginLeft"
                    android:layout_marginRight="@dimen/layout_marginLeft"
                    android:src="@drawable/account" />

                <EditText
                    android:id="@+id/login_edit_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/login_account_edit_hint"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/textForget" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_layout_hight"
                android:layout_marginBottom="@dimen/layout_marginBottom"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_marginTop="@dimen/layout_marginBottom"
                android:background="@drawable/edit_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/layout_margin"
                    android:layout_height="@dimen/layout_margin"
                    android:layout_marginLeft="@dimen/layout_marginLeft"
                    android:layout_marginRight="@dimen/layout_marginLeft"
                    android:src="@drawable/password" />

                <EditText
                    android:id="@+id/login_edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/login_password_edit_hint"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/textForget" />
            </LinearLayout>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_layout_hight"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_marginTop="@dimen/layout_margin_right"
                android:background="@drawable/btn_bg1"
                android:gravity="center"
                android:text="@string/login"
                android:textColor="@color/button"
                android:textSize="@dimen/textBtn" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_width1"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_marginTop="@dimen/layout_marginTop">

                <CheckBox
                    android:id="@+id/login_check"
                    android:layout_width="@dimen/layout_margin"
                    android:layout_height="@dimen/layout_margin"
                    android:layout_centerVertical="true"
                    android:button="@drawable/checkbox"
                    android:checked="true" />

                <TextView
                    android:id="@+id/agree_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/login_check"
                    android:gravity="center_vertical"
                    android:text="@string/Iagree"
                    android:textColor="#000000"
                    android:textSize="@dimen/textForgets" />

                <TextView
                    android:id="@+id/login_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/agree_login"
                    android:gravity="center_vertical"
                    android:text="@string/service_provision_name"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textForgets" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@+id/login_service"
                    android:layout_alignRight="@+id/login_service"
                    android:layout_below="@+id/login_service"
                    android:background="@color/textColor" />
                <TextView
                    android:id="@+id/login_and"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/login_service"
                    android:gravity="center_vertical"
                    android:text="@string/and"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textForgets" />
                <TextView
                    android:id="@+id/login_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/login_and"
                    android:gravity="center_vertical"
                    android:text="@string/privacy_clause_name"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textForgets" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@+id/login_privacy"
                    android:layout_alignRight="@+id/login_privacy"
                    android:layout_below="@+id/login_privacy"
                    android:background="@color/textColor" />

                <TextView
                    android:id="@+id/forgetpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/layout_marginTop"
                    android:layout_centerVertical="true"
                    android:text="@string/forgetpassword"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textForgets" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>