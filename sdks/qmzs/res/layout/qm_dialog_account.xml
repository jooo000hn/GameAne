<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/dialog_common"
    android:paddingBottom="2dp"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/title_common_container"
        android:orientation="horizontal" >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="6dp"
            android:background="@drawable/qm_logo"/>
        <TextView
            style="@style/title_common_text"
            android:layout_weight="2"
            android:text="@string/qm_title_chooseaccount"/>
        <Button
            android:id="@+id/qmCloseDialog"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:background="@drawable/qm_btn_close"/>
    </LinearLayout>
    
    <ListView
        android:id="@+id/qmAccountListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/qm_list_view_container"
        android:layout_margin="8dp"
        android:padding="2dp"
        android:minHeight="75dp"
        android:layout_weight="1">

    </ListView>

    <Button
        android:id="@+id/qmAccountListCancel"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        style="@style/button_common_green"
        android:layout_margin="8dp"
        android:text="@string/qm_btn_loginotheraccount"/>

</LinearLayout>
