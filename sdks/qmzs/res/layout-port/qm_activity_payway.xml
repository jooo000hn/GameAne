<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/pay_money_layout"
        android:background="@color/main_black"
        android:orientation="horizontal">
        <TextView
            android:text="@string/qm_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_20"
            android:textColor="@android:color/white"/>
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dark_gray" />

    <RelativeLayout
        style="@style/pay_info_layout"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:text="@string/qm_pay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/main_red"/>

        <TextView
            android:id="@+id/qmPayGoodsMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/main_red"/>

    </RelativeLayout>

    <RelativeLayout
        style="@style/pay_info_layout"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tv_goods_name"
            android:text="@string/qm_pay_goods_name"
            style="@style/pay_info_name"
            android:textColor="@color/dark_gray"/>
        <TextView
            android:id="@+id/qmPayGoodsName"
            android:layout_toRightOf="@id/tv_goods_name"
            style="@style/pay_info_value"
            android:textColor="@android:color/black"/>
    </RelativeLayout>

    <RelativeLayout
        style="@style/pay_info_layout"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tv_goods_detail"
            android:text="@string/qm_pay_goods_detail"
            style="@style/pay_info_name"
            android:textColor="@color/dark_gray"/>
        <TextView
            android:id="@+id/qmPayGoodsDetail"
            android:layout_toRightOf="@id/tv_goods_detail"
            style="@style/pay_info_value"
            android:textColor="@android:color/black"/>
    </RelativeLayout>
    
    <TextView
        android:text="@string/qm_pay_way_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="@dimen/text_size_16"
        android:textColor="@android:color/black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dark_gray" />

    <RelativeLayout
        android:id="@+id/qmPayWayList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

    </RelativeLayout>

</LinearLayout>
